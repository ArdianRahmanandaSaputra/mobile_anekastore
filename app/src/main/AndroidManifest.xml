<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_anekastore"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_anekastore_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnekaStoreMobile"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.WebViewActivity"
            android:theme="@style/ActionBar" />
        <activity android:name=".ui.homeui.checkout.CheckoutActivity" />
        <activity android:name=".ui.homeui.cart.CartActivity" />
        <activity android:name=".ui.homeui.home.DetailProductActivity" />
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/ActionBar" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity
            android:name=".ui.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>